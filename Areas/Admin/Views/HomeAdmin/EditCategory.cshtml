@model DeMoGCS10035.Models.Category

@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit Category</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory" method="post">
             <div class="form-group">
                @Html.TextBoxFor(category => category.Name, new { @class = "form-control form-control-lg", placeholder = "Name", value=Model.Name })
            </div>

            <div class="form-group">
                @Html.TextBoxFor(category => category.Details, new { @class = "form-control form-control-lg", placeholder = "Details", value=Model.Details })
            </div>
            <div class="mt-3">
                <button formmethod="post" type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Add new Category</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

