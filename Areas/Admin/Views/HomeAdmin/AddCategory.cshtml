@model DeMoGCS10035.Models.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>AddCategory</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("AddCategory", "HomeAdmin", FormMethod.Post, new { @class = "pt-3" }))
        {
            <div class="form-group">
                @Html.TextBoxFor(category => category.Name, new { @class = "form-control form-control-lg", placeholder = "Name" })
            </div>
         
            <div class="form-group">
                @Html.TextBoxFor(category => category.Details, new { @class = "form-control form-control-lg", placeholder = "Details" })
            </div>
            <div class="mt-3">
                <button formmethod="post" type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Add new Category</button>
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

